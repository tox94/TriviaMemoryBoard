<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="3dip" android:color="#666261" />
            <gradient android:angle="-90" android:startColor="#0ddb51" android:endColor="#048c31"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="3dip" android:color="#0632a3" />
            <solid android:color="#4d70cc"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="3dip" android:color="#666261" />
            <gradient android:angle="-90" android:startColor="#0ddb51" android:endColor="#048c31" />
        </shape>
    </item>
</selector>