<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_scrollview_layout_level_5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zavrsni.unizg.fer.triviamemoryboard.levels.fifth.FifthLevelActivity"
    tools:showIn="@layout/app_bar_fifth_level">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout_level_5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:isScrollContainer="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zavrsni.unizg.fer.triviamemoryboard.levels.fifth.FifthLevelActivity"
    tools:showIn="@layout/app_bar_fifth_level">

    <fragment
        android:id="@+id/header_fragment_level_5"
        android:name="com.zavrsni.unizg.fer.triviamemoryboard.levels.fragments.LevelHeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ScrollView
        android:id="@+id/scrollView_board_level_5"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/header_fragment_level_5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
        <!--android:fadeScrollbars="false"
        android:scrollbarStyle="insideInset"
        android:scrollbarThumbVertical="@color/colorPrimary"
        android:scrollbars="vertical"-->

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--android:fadeScrollbars="false"
            android:scrollbarStyle="insideInset"
            android:scrollbarThumbHorizontal="@color/colorPrimary"
            android:scrollbars="horizontal"-->

            <TableLayout
                android:id="@+id/table_board_level_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="false">

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <fragment
        android:id="@+id/question_fragment_level_5"
        android:name="com.zavrsni.unizg.fer.triviamemoryboard.levels.fragments.QuestionFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scrollView_board_level_5" />

    <fragment
        android:id="@+id/last_moves_fragment_level_5"
        android:name="com.zavrsni.unizg.fer.triviamemoryboard.levels.fragments.LastMovesFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scrollView_board_level_5" />

    <fragment
        android:id="@+id/nick_fragment_level_5"
        android:name="com.zavrsni.unizg.fer.triviamemoryboard.levels.fragments.SetNickFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scrollView_board_level_5" />

</RelativeLayout>
</ScrollView>

