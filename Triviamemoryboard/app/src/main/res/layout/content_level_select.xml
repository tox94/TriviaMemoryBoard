<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zavrsni.unizg.fer.triviamemoryboard.levels.LevelSelectActivity"
    tools:showIn="@layout/activity_level_select">

    <TextView
        android:id="@+id/textView_levelSelectHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:text="Odabir razine:"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_levelSelectHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_lvl_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_style"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Razina 1"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button_lvl_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button_lvl_1"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Razina 2"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button_lvl_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button_lvl_2"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Razina 3"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button_lvl_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button_lvl_3"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Razina 4"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button_lvl_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignStart="@+id/button_lvl_4"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Razina 5"
                android:textColor="@android:color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
