<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zavrsni.unizg.fer.triviamemoryboard">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".credits.CreditsActivity"
            android:label="@string/title_activity_credits"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zavrsni.unizg.fer.triviamemoryboard.MainActivity" />
        </activity>
        <activity
            android:name=".leaderboard.LeaderboardActivity"
            android:label="@string/title_activity_leaderboard"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zavrsni.unizg.fer.triviamemoryboard.MainActivity" />
        </activity>
        <activity
            android:name=".levels.LevelSelectActivity"
            android:label="@string/title_activity_level_select"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zavrsni.unizg.fer.triviamemoryboard.MainActivity" />
        </activity>
        <activity
            android:name=".levels.first.FirstLevelActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_first_level"
            android:parentActivityName=".levels.LevelSelectActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zavrsni.unizg.fer.triviamemoryboard.levels.LevelSelectActivity" />
        </activity>
        <activity
            android:name=".tutorial.TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zavrsni.unizg.fer.triviamemoryboard.MainActivity" />
        </activity>
        <activity
            android:name=".statistics.StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zavrsni.unizg.fer.triviamemoryboard.MainActivity" />
        </activity>
        <activity
            android:name=".levels.second.SecondLevelActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_second_level"
            android:parentActivityName=".levels.LevelSelectActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zavrsni.unizg.fer.triviamemoryboard.levels.LevelSelectActivity" />
        </activity>
        <activity
            android:name=".levels.third.ThirdLevelActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_third_level"
            android:parentActivityName=".levels.LevelSelectActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zavrsni.unizg.fer.triviamemoryboard.levels.LevelSelectActivity" />
        </activity>
        <activity
            android:name=".levels.fourth.FourthLevelActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_fourth_level"
            android:parentActivityName=".levels.LevelSelectActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zavrsni.unizg.fer.triviamemoryboard.levels.LevelSelectActivity" />
        </activity>
        <activity
            android:name=".levels.fifth.FifthLevelActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_fifth_level"
            android:parentActivityName=".levels.LevelSelectActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zavrsni.unizg.fer.triviamemoryboard.levels.LevelSelectActivity" />
        </activity>
        <activity android:name=".statistics.help.HelpingStatActivity"></activity>
    </application>

</manifest>